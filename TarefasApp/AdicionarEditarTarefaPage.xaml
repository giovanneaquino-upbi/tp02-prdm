<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TarefasApp"
             x:Class="TarefasApp.AdicionarEditarTarefaPage"
             Title="Adicionar/Editar Tarefa">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Título" />
            <Entry x:Name="tituloEntry" Placeholder="Digite o título da tarefa" />

            <Label Text="Descrição" />
            <Entry x:Name="descricaoEditor" Placeholder="Digite a descrição" HeightRequest="100" />

            <Label Text="Data de Criação" />
            <DatePicker x:Name="dataDatePicker" Format="dd/MM/yyyy" />

            <Label Text="Prioridade" />
            <Picker x:Name="prioridadePicker" Title="Selecione a prioridade" />

            <Button Text="Salvar" Clicked="OnSalvarClicked" Margin="0, 20, 0, 0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>