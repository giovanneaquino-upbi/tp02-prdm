<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TarefasApp"
             x:Class="TarefasApp.DetalhesTarefaPage"
             Title="Detalhes da Tarefa">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Título:" FontAttributes="Bold" Margin="0, 15, 0, 0" />
            <Label x:Name="tituloLabel" FontSize="Large" />

            <Label Text="Descrição:" FontAttributes="Bold" Margin="0, 15, 0, 0" />
            <Label x:Name="descricaoLabel" />

            <Label Text="Data de Criação:" FontAttributes="Bold" Margin="0, 15, 0, 0" />
            <Label x:Name="dataLabel" />

            <Label Text="Prioridade:" FontAttributes="Bold" Margin="0, 15, 0, 0" />
            <Label x:Name="prioridadeLabel" />

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0, 30, 0, 0">
                <Button Text="Editar" Clicked="OnEditarClicked" />
                <Button Text="Excluir" Clicked="OnExcluirClicked" BackgroundColor="Red" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>